<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CalculatorStandard" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonBackground">@color/purple_700</item>
        <item name="buttonOperationBackground">@android:color/holo_orange_dark</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="resultTextViewTextColor">@color/dark_gray_3</item>
        <item name="resultTextViewBackgroundColor">@color/white</item>
        <item name="historyTextViewTextColor">@color/dark_gray_7</item>
        <item name="backgroundImageSource">@drawable/calculator_background</item>
    </style>

    <style name="Theme.SandDorBeetle" parent="Theme.CalculatorStandard">
        <item name="buttonBackground">@color/beetle_body_opacity_AA</item>
        <item name="buttonOperationBackground">@color/yellow_opacity_33</item>
        <item name="buttonTextColor">@color/black</item>
        <item name="resultTextViewTextColor">@color/dark_gray_3</item>
        <item name="resultTextViewBackgroundColor">@color/yellow_opacity_33</item>
        <item name="historyTextViewTextColor">@color/dark_gray_7</item>
        <item name="backgroundImageSource">@drawable/calculator_background_sand_theme</item>
    </style>

</resources>