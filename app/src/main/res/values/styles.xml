<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GridLayoutCellContent">
        <item name="android:layout_width">@dimen/size_0dp</item>
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:layout_columnWeight">@integer/column_weight_one</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="CalculatorButton" parent="GridLayoutCellContent">
        <item name="android:layout_marginLeft">@dimen/default_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/default_horizontal_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_number_text_size</item>
        <item name="android:backgroundTint">?attr/buttonBackground</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:strokeWidth">@integer/zero</item>
    </style>

    <style name="CalculatorButton.OperationButton">
        <item name="android:textSize">@dimen/button_operation_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">?attr/buttonOperationBackground</item>
    </style>

    <style name="ResultTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textview_result_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/resultTextViewTextColor</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">@dimen/result_textview_paddingend</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:layout_marginLeft">@dimen/result_textview_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/result_textview_horizontal_margin</item>
    </style>

    <style name="HistoryTextViewStyle">
        <item name="android:layout_height">@dimen/textview_history_height</item>
        <item name="android:layout_width">@dimen/textview_history_width</item>
        <item name="android:textSize">@dimen/textview_history_text_size</item>
        <item name="android:textColor">?attr/historyTextViewTextColor</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginLeft">@dimen/result_textview_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/result_textview_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/textview_history_margin_bottom</item>
    </style>

    <style name="BackgroundImageViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">?attr/backgroundImageSource</item>
    </style>

    <style name="ThemeChangeButtonStyle">
        <item name="android:layout_width">@dimen/theme_change_button_width</item>
        <item name="android:layout_height">@dimen/theme_change_button_height</item>
        <item name="android:layout_marginEnd">@dimen/theme_change_button_margins</item>
        <item name="android:padding">@dimen/size_0dp</item>
        <item name="android:layout_marginBottom">@dimen/theme_change_button_margins</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:backgroundTint">@color/dull_white</item>
        <item name="cornerRadius">@dimen/theme_change_button_corner_round_radius</item>
    </style>

    <style name="ThemeSelectionActivityHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/theme_selection_header_topmargin</item>
        <item name="android:textSize">@dimen/theme_selection_header_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeInListLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/theme_in_list_topmargin</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="ThemeInListImagePreview">
        <item name="android:layout_width">@dimen/theme_preview_image_width</item>
        <item name="android:layout_height">@dimen/theme_preview_image_height</item>
        <item name="android:layout_marginEnd">@dimen/theme_preview_image_marginend</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ThemeInListTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/theme_in_list_title_textsize</item>
        <item name="android:layout_gravity">start|center_vertical</item>
    </style>

</resources>